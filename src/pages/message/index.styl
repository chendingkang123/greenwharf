.message
  background #f5f5f5
  height 100%
  min-height 100vh
  position relative
  .btn-sign-wrapper
    position fixed
    top 50%
    left 50%
    transform translate(-50%, -50%)
  .item
    margin-top 20px
  .batch-actions
    position fixed
    bottom: 0
    left 0
    right 0
    display: flex;
    justify-content: space-between;
    box-sizing: border-box
    align-items: center;
    padding 0 24px
    background-color #fff
    border-top: 1px solid #ccc
    height 100px
    .buttions
      display: flex;
  .message-item
    margin-top 20px
    background-color #fff
    border-top 1px solid #d6e4ef

    font-size 30px
    .header
      padding 18px 24px
      display flex
      justify-content space-between
      align-items center
      .wrapper
        display: flex;
        justify-items: center;
      .time
        color #999
        font-size 28px
    .body
      border-top 1px solid #d6e4ef
      padding 24px
      View
        color #999
        font-size 28px
    .foot
      border-top 1px solid #d6e4ef
      text-align right
      padding 18px 10px 18px 24px
      background-color #fff
      display: flex;
      justify-content: space-between;
      text
        font-size 28px
