.x-fab-wrapper
  position fixed
  bottom 30px
  right 30px

.query-condition-wrapper
  .name
    display: flex;
    background-color #fff
    padding 0 30px
    padding-bottom 20px
    flex-wrap wrap
    .item
      border 1px solid #ccc
      box-sizing border-box
      display flex
      align-items center
      justify-content center
      font-size 24px
      padding 10px
      flex 0 0 48%
      margin-top 20px
      &:nth-child(2n+1)
        margin-right 4%
    .x-highlight
      border 1px solid rgb(0, 167, 0)
      color rgb(0, 167, 0)
  .type
    display: flex;
    background-color #fff
    padding 20px
    .item
      margin-right: 20px;
      border 1px solid #ccc
      box-sizing border-box
      display flex
      align-items center
      justify-content center
      font-size 24px
      padding 10px
  .status
    display: flex;
    background-color #fff
    padding 20px
    .item
      margin-right: 20px;
      border 1px solid #ccc
      box-sizing border-box
      display flex
      align-items center
      justify-content center
      font-size 24px
      padding 10px
