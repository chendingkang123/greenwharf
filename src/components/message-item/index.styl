.message-item
  margin-top 20px
  background-color #fff
  border-top 1px solid #d6e4ef

  font-size 30px
  .header
    padding 18px 24px
    display flex
    justify-content space-between
    align-items center
    .wrapper
      display: flex;
      justify-items: center;
    .time
      color #999
      font-size 28px
  .body
    border-top 1px solid #d6e4ef
    padding 24px
    View
      color #999
      font-size 28px
  .foot
    border-top 1px solid #d6e4ef
    text-align right
    padding-left 24px
    padding-right 24px
    background-color #fff
    display: flex;
    justify-content: space-between;
    align-items: center;
    text
      font-size 28px
    .foot-r
      display: flex;
      align-items: center;
      > View
        display: flex;
        align-items: center;
        padding-top: 15px;
        padding-bottom: 15px;
    .status
      padding-top: 15px;
      padding-bottom: 15px;
  .delete-wrapper
    color red
  